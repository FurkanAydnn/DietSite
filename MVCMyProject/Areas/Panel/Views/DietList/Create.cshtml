        background: white;
        margin-top: 20px;
    }*/
    #choice option {
        color: black;
    }

    .empty {
        color: #AAAAAA;
    }
</style>

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3"></div>
            <div class="col-lg-6 col-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/Panel/DietList/Create" method="post">
                            <div class="form-group">
                                <label class="control-label">Paket Adı:</label>
                                <input name="Title" placeholder="Paket adını giriniz." class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Fiyat:</label>
                                <input name="Price" type="number" placeholder="Paket fiyatını giriniz." class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Görüşme Periyodu(Hafta/Görüşme)</label>
                                <select name="Period" id="choice" class="form-control">
                                    <option value="0" hidden>Görüşme sıklığı seçiniz</option>
                                    @for (int i = 1; i < 5; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="whatsap"><input id="whatsap" type="checkbox" name="WhatsAppContanct" value="true" />WhatsApp İletişim </label>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-warning">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3"></div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $("#choice").change(function () {
            if ($(this).val() == "0") $(this).addClass("empty");
            else $(this).removeClass("empty")
        });
        $("#choice").change();
    </script>
}