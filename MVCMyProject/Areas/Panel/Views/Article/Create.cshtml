<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link type="text/css" href="~/Areas/Panel/ckeditor/sample/css/sample.css" rel="stylesheet" media="screen" />
    <title>CKEditor 5 – classic editor build sample</title>
</head>
<body>
    <br /><br />
    <div class="content">
        <div class="container-fluid">
            <main>
                <div class="centered">
                    <div id="editor">
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="~/Areas/Panel/ckeditor/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), {
                // toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });
    </script>

</body>
</html>
