@using Entity
@model GeneralSettings

@{
    ViewBag.Title = "Index";
}

@section styles{
    <style>
        .create {
            position: absolute;
            right: 10px;
            top: 5px;
        }

        th, td {
            text-align: center;
        }
    </style>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">


}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h4 class="card-title">Genel Ayarlar</h4>
                        @if (Model == null)
                        {
                            <a href="~/Panel/GeneralSettings/Create" class="btn btn-warning create">Ayarları Oluştur</a>
                        }
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning">
                                <tr>
                                    <th>Hakkımda</th>
                                    <th>InstagramURL</th>
                                    <th>TwitterURL</th>
                                    <th>FacebookURL</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>ResimURL</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    <tr>
                                        <td>@Model.AboutMe</td>
                                        <td>@Model.InstagramURL</td>
                                        <td>@Model.TwitterURL</td>
                                        <td>@Model.FacebookURL</td>
                                        <td>@Model.Email</td>
                                        <td>@String.Format("{0:0(###) ### ## ##}", Convert.ToInt64(Model.Phone))</td>
                                        <td>@Model.ImageURL</td>
                                        <td><a href="?del=@Model.Id">Sil</a>/<a href="/Panel/GeneralSettings/Edit/@Model.Id">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
