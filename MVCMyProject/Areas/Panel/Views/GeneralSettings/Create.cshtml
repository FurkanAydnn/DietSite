<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3"></div>
            <div class="col-lg-6 col-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/Panel/GeneralSettings/Create" method="post">
                            <div class="form-group">
                                <label class="control-label">Hakkımda</label>
                                <textarea name="AboutMe" class="form-control" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Instagram</label>
                                <input name="InstagramURL" placeholder="Instagram URL'nizi yazınız" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Twitter</label>
                                <input name="TwitterURL" placeholder="Twitter URL'nizi yazınız" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Facebook</label>
                                <input name="FacebookURL" placeholder="Facebook URL'nizi yazınız" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input name="Email" placeholder="Email adresini yazınız" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Telefon</label>
                                <input name="Phone" placeholder="Telefon numaranızı yazınız" class="form-control" />
                            </div>
                            <div class="text-right">
                                <button class="btn btn-warning">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3"></div>
        </div>
    </div>
</div>