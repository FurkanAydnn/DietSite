@using Entity
@model Product

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3"></div>
            <div class="col-lg-6 col-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/Panel/Product/EditProduct" method="post">
                            <div class="form-group">
                                <label class="control-label">Kategori: </label>
                                <select name="ProductTypeId" class="form-control">
                                    @foreach (ProductType item in ViewBag.Types)
                                    {
                                        var selected = Model.ProductTypeId == item.Id ? "selected" : "";
                                        <option @selected value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ürün Adı:</label>
                                <input name="Name" placeholder="Ürün adını giriniz" class="form-control" value="@Model.Name" />
                                <input name="Id" value="@Model.Id" hidden />
                            </div>
                            <div class="text-right">
                                <button class="btn btn-warning">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3"></div>
        </div>
    </div>
</div>